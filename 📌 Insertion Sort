)
#include <iostream>
using namespace std;

void insertionSort(int arr[], int n) {
    // Start from second element
    for (int i = 1; i < n; i++) {
        int key = arr[i]; // Element to be inserted
        int j = i - 1;

        // Move elements greater than key to one position ahead
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j]; // Shift element right
            j--;
        }
        arr[j + 1] = key; // Insert key at correct position
    }
}

int main() {
    int arr[] = {12, 11, 13, 5, 6};
    int n = sizeof(arr) / sizeof(arr[0]);

    insertionSort(arr, n); // Call insertion sort

    // Display sorted array
    cout << "Insertion Sorted array: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    return 0;
}



ðŸŽ¯ Selection Sort (Selects the minimum element and places it at the beginning)
#include <iostream>
using namespace std;

void selectionSort(int arr[], int n) {
    // Move boundary of unsorted subarray
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i; // Assume current index is minimum

        // Find index of minimum element in remaining array
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }

        // Swap found minimum with first element
        int temp = arr[minIndex];
        arr[minIndex] = arr[i];
        arr[i] = temp;
    }
}

int main() {
    int arr[] = {64, 25, 12, 22, 11};
    int n = sizeof(arr) / sizeof(arr[0]);

    selectionSort(arr, n); // Call selection sort

    // Display sorted array
    cout << "Selection Sorted array: ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    return 0;
}



